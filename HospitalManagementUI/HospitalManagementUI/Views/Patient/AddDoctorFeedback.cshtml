@model HospitalManagementUI.Models.DTOs.FeedbackDTO.DoctorFeedbackDTO

@{
    ViewData["Title"] = "AddDoctorFeedback";
}

<h3>Your Feedback is important to us!</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDoctorFeedback">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentId" class="control-label"></label>
                <select asp-for="AppointmentId" asp-items="@ViewBag.SelectListAppointment" class="form-control"></select>
                <span asp-validation-for="AppointmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" asp-items="@ViewBag.SelectListDoctor" class="form-control"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorsFeedback" class="control-label"></label>
                @Html.TextAreaFor(m => m.DoctorsFeedback, new { @class = "form-control" })
                <span asp-validation-for="DoctorsFeedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
