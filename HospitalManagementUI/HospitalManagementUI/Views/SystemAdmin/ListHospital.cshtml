@model IEnumerable<HospitalManagementUI.Models.DTOs.HospitalDTO>

@{
    ViewData["Title"] = "ListHospital";
}

<h1 style="text-align:center; margin-top:20px;">Manage Hospital</h1>
@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}
@if (TempData["Updated"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Updated"]</p>
}

<p>
    <a asp-action="CreateHospital" class="btn btn-primary btn-lg">Register Hospital</a>
    <a asp-action="Index" class="btn btn-info btn-lg">Back to Dashboard</a>
</p>
<table class="table">
    <thead>
        <tr style="background-color: #0074ab; color:white;">
            <th>
                @Html.DisplayNameFor(model => model.HospitalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #e6f7ff;">
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalPhone)
                </td>
                <td>
                    <a asp-action="HospitalEdit" asp-route-id="@item.HospitalId" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="HospitalDetails" asp-route-id="@item.HospitalId" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
