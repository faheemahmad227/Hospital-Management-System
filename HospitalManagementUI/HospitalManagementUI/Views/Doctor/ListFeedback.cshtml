@model IEnumerable<HospitalManagementUI.Models.DTOs.FeedbackDTO.DoctorFeedbackDTO>

@{
    ViewData["Title"] = "ListFeedback";
}

<h2>Feedback History</h2>
<p>
    <a asp-action="Index" class="btn btn-info btn-lg">Back to Dashboard</a>
</p>

<table class="table">
    <thead>
        <tr style="background-color: #0074ab; color:white;">
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorsFeedback)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="background-color: #e6f7ff;">
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorsFeedback)
            </td>
        </tr>
}
    </tbody>
</table>
